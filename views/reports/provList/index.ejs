<html>

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="./styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <%- style %>
        <header class="header">
            <div class="logo">
                <img src="<%- logo %> " alt="logo">
            </div>
            <div class="summary">
                LISTADO DE MONOTRIBUTISTAS
            </div>
        </header>
        <main class="main">
            <div class="tasks">
                <table class="tasks-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Cuit</th>
                            <th>Sector</th>
                            <th>Dirección</th>
                            <th>Email</th>
                            <th>Telefóno</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% providerList.forEach(function(item){ %>
                            <tr>
                                <td style="text-align: left">
                                    <%- item.name %>
                                </td>
                                <td style="text-align: left">
                                    <%- item.cuit %>
                                </td>
                                <td style="text-align: left">
                                    <%- item.sector %>
                                </td>
                                <td style="text-align: left">
                                    <%- item.direction %>
                                </td>
                                <td style="text-align: left">
                                    <%- item.email %>
                                </td>
                                <td style="text-align: left">
                                    <%- item.phone %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </main>
</body>

</html>